---
import '../styles/global.css';

const { title = 'Matt Pahuta' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="antialiased font-sans text-lg grid text-slate-300 bg-slate-950 scroll-smooth">
    <div class="mx-auto">
      <slot />
    </div>
  </body>
</html>