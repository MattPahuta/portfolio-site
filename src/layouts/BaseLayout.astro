---
import '../styles/global.css';

const { title = 'Matt Pahuta' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-screen px-4 min-h-screen font-sans grid text-gray-200 bg-gray-900 scroll-smooth">
    <div class="mx-auto max-w-3xl">
      <slot />
    </div>
  </body>
</html>