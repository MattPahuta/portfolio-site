---
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/projects.json';
---

<section class="py-12 border-t border-gray-400">
  <div class="max-w-4xl px-4 sm:px-6">
    <h2 class="mb-4 text-2xl sm:text-3xl font-mono font-bold text-zinc-50">Projects<span class="text-indigo-300">.</span>
    </h2>
    <div class="py-6 grid justify-items-center gap-6">
      {
        projects.map(project => (
          <ProjectCard 
            title={project.title} 
            description={project.description} 
            imagePath={project.imagePath} 
            imageAltText={project.imageAltText} 
            techStack={project.techStack} 
            gitHubUrl={project.gitHubUrl} 
            liveSiteUrl={project.liveSiteUrl} 
          />
        ))
      }
    </div>
  </div>
</section>