---
import ProjectCard from '../components/ProjectCard.astro';
import ProjectCardUpdated from './ProjectCardUpdated.astro';
import projects from '../data/projects.json';
---

<section class="max-w-4xl py-12 px-5 border-t border-gray-400">
  <div class="">
    <h2 class="mb-4 text-2xl sm:text-3xl font-mono font-bold text-zinc-50">Projects<span class="text-indigo-300">.</span>
    </h2>
    <ul class="py-6 grid justify-items-center sm:grid-cols-2 gap-6">
      {
        projects.map(project => (
          <ProjectCardUpdated 
            title={project.title} 
            description={project.description} 
            imagePath={project.imagePath} 
            imageAltText={project.imageAltText} 
            techStack={project.techStack} 
            gitHubUrl={project.gitHubUrl} 
            liveSiteUrl={project.liveSiteUrl} 
          />
        ))
      }
    </ul>
  </div>
</section>