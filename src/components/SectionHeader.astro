---
interface Props {
  heading: string
}

const { heading } = Astro.props;
---

<div class="flex items-center gap-6">
  <h2 class="text-3xl sm:text-4xl font-mono text-zinc-50 whitespace-nowrap">
    {heading}
  </h2>
  <div class="hidden sm:block w-full h-[1.5px] bg-linear-to-r from-gray-900 via-blue-400 to-gray-900"></div>
</div>