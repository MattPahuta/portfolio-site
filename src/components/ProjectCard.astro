---
import { Image } from 'astro:assets';
import { Icon } from "astro-icon/components";
import project1 from '../assets/images/projects/frontend-quiz.png';
const { data } = Astro.props;
// props - image src, alt, title, techs, object-fit property
// drop project images in public: "quiz.jpg"
// or in images folder, use Astro Image?
// Add sub-component for tech 'badges' - icons with names?
---

<article class="p-8 grid gap-5 sm:grid-cols-2 rounded-lg border border-gray-700 bg-radial from-slate-700 to-gray-900">
  <div class="flex flex-col justify-around">
    <div>
      <h3 class="mb-1 font-mono font-bold text-xl text-zinc-50 sm:mb-3">
        <a href="" class="hover:text-emerald-500 cursor-pointer transition">
          Frontend Quiz App
        </a>
      </h3>
      <p class="mb-4 text-zinc-300">Test your frontend web dev knowledge with this quiz app built with React.</p>
      <div class="flex items-center gap-3">
        <Icon name="vscode-icons:file-type-reactjs" title="React" class="size-6 sm:size-8"
        />
        <Icon name="vscode-icons:file-type-css" title="CSS" class="size-6 sm:size-8"
        />
        <Icon name="vscode-icons:file-type-vite" title="Vite" class="size-6 sm:size-8"
        />
      </div>
    </div>
    <div class="flex items-center gap-3">
      <div class="w-full border border-slate-400"></div>
      <a href="">
        <Icon name="mdi:external-link" class="size-5 sm:size-7 text-slate-200 hover:text-emerald-500 transition-colors" title="View demo site" />
      </a>
      <a href="">
        <Icon name="mdi:github" class="size-5 sm:size-7 text-slate-200 hover:text-emerald-500 transition-colors" title="View project code" />
      </a>
    </div>
  </div>
  <div
    class="group relative duration-200 rounded-md overflow-hidden"
  >
    <Image src={project1} alt="Frontend quiz app" class="w-full object-cover object-center" />
    <div
      class="absolute grid inset-0 bg-black/60 p-6 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    >
      <div
        class="translate-y-4 space-y-2 transition-transform duration-300 group-hover:translate-y-0 place-self-center"
      >
        <div class="">
          <a href="">GitHub</a>
          <a href="">Demo</a>
        </div>
      </div>
    </div>
  </div>

</article>

