---
import { Image } from 'astro:assets';
import { Icon } from "astro-icon/components";
import project1 from '../assets/images/projects/frontend-quiz.png';
const { data } = Astro.props;
// props - image src, alt, title, techs, object-fit property
// drop project images in public: "quiz.jpg"
// or in images folder, use Astro Image?
// Add sub-component for tech 'badges' - icons with names?
---

<article class="p-8 grid gap-5 sm:gap-6 sm:grid-cols-2 rounded-lg border border-zinc-700 bg-radial from-accent3-dark to-neutral-900 hover:scale-105 transition duration-300">
  <div class="space-y-6 flex flex-col">
    <h3 class="mb-1 font-mono font-semibold text-xl text-zinc-50 sm:text-2xl sm:mb-3">
      <a href="" class="underline-offset-4 hover:underline decoration-accent-mint cursor-pointer transition">
        Frontend Quiz App
      </a>
    </h3>
    <p class="mb-4 text-zinc-200">Test your frontend web dev knowledge with this quiz app built with React.</p>
    <ul class="flex items-center gap-3">
      <li>
        <Icon name="vscode-icons:file-type-reactjs" role="img" title="React" class="size-6 sm:size-8"
        />
      </li>
      <li>
        <Icon name="vscode-icons:file-type-css" role="img" title="CSS" class="size-6 sm:size-8"
        />
      </li>
      <li>
        <Icon name="vscode-icons:file-type-vite" role="img" title="Vite" class="size-6 sm:size-8"
        />
      </li>
    </ul>

    <div class="flex items-center justify-end gap-2 sm:mt-auto text-zinc-200">
      <!-- <a href="" class="px-1.5 py-1 inline-flex items-center justify-center rounded-sm hover:bg-accent2-dark sm:text-lg">
        View Project
        <Icon name="mdi:keyboard-arrow-right" class="size-6" />
      </a> -->
      <a href="" class="p-1 inline-flex items-center justify-center text-center rounded-md text-zinc-200 bg-neutral-800 hover:bg-neutral-700 hover:text-zinc-50 transition">
        <span class="sr-only">Live preview</span>
        <Icon name="mdi:external-link" class="size-6 sm:size-8" role="img" title="View demo site" />
      </a>
      <a href="" class="p-1 inline-flex items-center justify-center text-center rounded-md text-zinc-200 bg-neutral-800 hover:bg-neutral-700 hover:text-zinc-50 transition">
        <span class="sr-only">View project code</span>
        <Icon name="mdi:github" class="size-6 sm:size-8" role="img" title="View project code" />
      </a>
    </div>

  </div>

  <div class="rounded-md overflow-hidden row-start-1">
    <Image src={project1} alt="Frontend quiz app" class="w-full object-cover object-center" />
  </div>
</article>