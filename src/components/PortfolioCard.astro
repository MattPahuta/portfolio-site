---
import { Image } from 'astro:assets';
import { Icon } from "astro-icon/components";
import frontEndQuizApp from '../assets/images/projects/frontend-quiz.png';
---

<article class="p-8 grid items-center gap-5 sm:grid-cols-2 rounded-lg border border-gray-700 bg-radial from-slate-700 to-gray-900">
  <div class="">
    <h3 class="mb-1 font-mono font-bold text-xl text-zinc-50 sm:mb-3">
      <a href="" class="hover:text-accent-dark cursor-pointer transition">
        Frontend Quiz App
        <Icon name="mdi:external-link" class="inline" />
      </a>
    </h3>
    <p class="mb-4 text-zinc-300">Test your frontend web dev knowledge with this quiz app built with React.</p>
    <div class="flex items-center gap-3">
      <Icon name="vscode-icons:file-type-reactjs" title="React" class="size-6 sm:size-8"
      />
      <Icon name="vscode-icons:file-type-css" title="CSS" class="size-6 sm:size-8"
      />
      <Icon name="vscode-icons:file-type-vite" title="Vite" class="size-6 sm:size-8"
      />
    </div>
  </div>
  <Image src={frontEndQuizApp} alt="Frontend quiz app" class="w-full object-cover object-center rounded-lg" />
</article>

